<p id="notice"><%= notice %></p>

<h1>Listing Matches</h1>

<table>
  <thead>
    <tr>
      <th>Competition</th>
      <th>Local</th>
      <th>Visitor</th>
      <th>Local score</th>
      <th>Visitor score</th>
      <th>Begin at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.competition_id %></td>
        <td><%= match.local_id %></td>
        <td><%= match.visitor_id %></td>
        <td><%= match.local_score %></td>
        <td><%= match.visitor_score %></td>
        <td><%= match.begin_at %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

